@model IEnumerable<БИПиТ10.Service>

@{
    ViewBag.Title = "Service";
}

<h2>Услуги</h2>
@if (User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Добавить новую услугу", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Service1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Service1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            @if (User.Identity.IsAuthenticated)
            {
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.IdS }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.IdS })
                </td>
            }
            else
            {
                <td></td>
            }
        </tr>
     }

</table>
